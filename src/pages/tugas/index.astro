---
import Layout from "../../layouts/Layout.astro";
import { ListTeam } from "../../data/Team";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Our Team">
  <Navbar />
  <div class="block max-w-7xl py-28 mx-auto lg:text-xl">
    <div class="flex justify-center mb-5">
      <h2 class="lg:text-3xl text-2xl font-semibold dark:text-gray-100">Our Team</h2>
    </div>
    <div class="lg:grid flex flex-col justify-center items-center sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
      {
        ListTeam.map((items) => (
          <div class="lg:w-[350px] w-[350px] lg:pt-4 pt-4 bg-[#FFEEF4] border border-none rounded-lg shadow dark:bg-gray-800">
            <div class="flex justify-center">
              <img src={items.image} class="lg:mt-2 mt-4 rounded-lg lg:w-80 lg:h-80 w-72 h-72" alt={items.nama} fetchpriority="low" />
            </div>
            <div class="p-5">
              <h1 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-gray-100">{items.nama}</h1>
              <p class="text-base text-gray-700 dark:text-gray-300">{items.nim}</p>
              <p class="text-base text-gray-700 dark:text-gray-300">{items.kelas}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <Footer />
</Layout>
